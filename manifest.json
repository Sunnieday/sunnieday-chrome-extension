{
  "name": "Sunnieday (Flash Player automatisch inschakelen)",
  "version": "1.1",
  "description": "Automatisch inschakelen van Flash Player op www.sunnieday.nl",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "72": "images/icon-72x72.png",
    "96": "images/icon-96x96.png",
    "128": "images/icon-128x128.png",
    "144": "images/icon-144x144.png",
    "152": "images/icon-152x152.png",
    "192": "images/icon-192x192.png"
  },
  "permissions": ["contentSettings", "contextMenus"]
}
